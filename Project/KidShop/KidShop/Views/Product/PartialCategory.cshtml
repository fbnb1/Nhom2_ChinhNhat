@model IEnumerable<KidShop.Areas.Admin.Models.DataModel.Category>
<div class="sk-leftSidebar-widget category-menu-widget">
    <div class="sk-widget-title green-bg-widget">
        <h5>@ViewBag.ParentName</h5>
    </div>
    <div class="category-menu-wrap block-content">
        <ul class="category-menu-inner block-list">

            @if (ViewBag.ParentName == "Danh Mục")
            {
                <li>
                    @Html.ActionLink("Tất cả sản phẩm", "Index", "Product")
                </li>
            }

            @foreach (var item in Model)
            {
                <li>
                    @Html.ActionLink(item.CategoryName, "Index", "Product", new { id = item.CategoryId }, null)
                </li>
            }
            @if (ViewBag.ParentName == "Danh Mục")
            {
                <li>
                    @Html.ActionLink("Khuyến mại", "Index", "Product", new { id = 0 }, null)
                </li>
            }
        </ul>
    </div>
</div>
