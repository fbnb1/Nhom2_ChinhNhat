@model PagedList.IPagedList<KidShop.Areas.Admin.Models.DataModel.Product>
@using PagedList.Mvc;
@using System.Configuration;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Sản phẩm";
}

<div class="category-page-layout">
    <div class="container">
        <div class="row">
            <aside class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                
                @Html.Action("PartialCategory", "Product", new { id = ViewBag.CategoryId })
                
            </aside>
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">

                <div class="sk-main-content-head">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 breadcrumb-wrap">
                            @Html.Action("PartialProductUrl", "Product", new { id = ViewBag.CategoryId })
                        </div>
                        <div class="col-md-6 col-sm-6 head-hotline-wrap">
                            <div class="head-hotline-inner">
                                <span>Hotline:</span><a href="tel:@ConfigurationManager.AppSettings["hotline"]">@ConfigurationManager.AppSettings["hotline"]</a>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>

                <div class="sk-page-title">
                    <h1>@ViewBag.CategoryName</h1>
                </div>
                <div class="product-nav-wrap">
                    <div class="col-md-6 col-sm-6 sort-wrap no-padding-left">
                    </div>
                    <div class="col-md-6 col-sm-6 filter-wrap no-padding-right">
                        <div class="filter-inner">
                            <div id="sort-by">
                                <form id="formSortBy" class="form-inline form-viewpro">
                                    <div class="form-group">
                                        <select class="sort-by-script" id="" onchange="SortBy(this)">
                                            <option value="default">Mặc định</option>

                                            <option 
                                            @if (ViewBag.CurrentSort == "price")
                                            {
                                                @: selected
                                            }
                                            value="price">Giá tăng dần</option>

                                            <option
                                            @if (ViewBag.CurrentSort == "price-desc")
                                            {
                                                @: selected
                                            }
                                            value="price-desc">Giá giảm dần</option>

                                            <option
                                            @if (ViewBag.CurrentSort == "name")
                                            {
                                                @: selected
                                            }
                                            value="name">Từ A-Z</option>

                                            <option
                                            @if (ViewBag.CurrentSort == "name-desc")
                                            {
                                                @: selected
                                            }
                                            value="name-desc">Từ Z-A</option>
                                            
                                            <option 
                                            @if (ViewBag.CurrentSort == "date")
                                            {
                                                @: selected
                                            }
                                            value="date">Cũ đến mới</option>

                                            <option 
                                            @if (ViewBag.CurrentSort == "date-desc")
                                            {
                                                @: selected
                                            } 
                                            value="date-desc">Mới đến cũ</option>
                                        </select>
                                        <script type="text/javascript">
                                            function SortBy(ddlFruits) {
                                                var selectedText = ddlFruits.options[ddlFruits.selectedIndex].innerHTML;

                                                var selectedValue = ddlFruits.value;

                                                window.location.href = "@Url.Action("Index", "Product", new { id = ViewBag.CategoryId})" + "?sortOrder=" + selectedValue;
                                                //document.getElementById("formSortBy").submit();
                                            }
                                        </script>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sk-product-list">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-3 col-sm-6 col-xs-12">
                                @Html.Partial("~/Views/Product/PartialProduct.cshtml", item)
                            </div>
                        }
                    </div>
                </div>


                <div class="sk-category-paging-wrap">
                    <div class="pull-right">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { ViewBag.CategoryId, sortOrder = ViewBag.CurrentSort, page }))
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>