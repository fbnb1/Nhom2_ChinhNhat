@model List<KidShop.Areas.Admin.Models.DataModel.Product>

<div class="sk-leftSidebar-widget sellingProducts-widget">
    <div class="sk-widget-title pink-bg-widget">
        <h5>Khuyến mại hót</h5>
        <div class="customNavigation">
            <a class="btn prev"><i class="fa fa-angle-left" aria-hidden="true"></i></a>
            <a class="btn next"><i class="fa fa-angle-right" aria-hidden="true"></i></a>
        </div>
    </div>
    <div class="slider-items-products">
        <div id="sellingProducts-slider" class="owl-carousel owl-theme">
          <div class="item">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    if (i % 4 == 0&&i>0)
                    {
                          @:</div><div class="item">
                    }
                            <div class="sellingProducts-item">
                                <div class="col-md-5 col-sm-5 sellingProducts-image-wrap">
                                    <a class="sellingProducts-image" href="@Url.Action("Details", "Product", new { id = Model[i].ProductId })">
                                        <img src="~/Areas/Admin/Content/Images/Product/@Model[i].ProductImages" alt="@Model[i].ProductName" class="img-responsive">
                                    </a>
                                </div>
                                <div class="col-md-7 col-sm-7">
                                    <div class="item-info">
                                        <h3 class="item-title">
                                            <a href="@Url.Action("Details", "Product", new { id = Model[i].ProductId })" title="@Model[i].ProductName">@Model[i].ProductName</a>
                                        </h3>
                                        <div class="price-box">
                                            <span class="price">@Model[i].Sale₫</span>

                                            <span class="price-compare">

                                                @Model[i].Price₫

                                            </span>

                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                }
                        </div>
                    
                </div>
            </div>
    </div>

